# ===========================================
# PriceWatch Environment Variables
# Copy this file to .env.local and fill in values
# ===========================================

# ===== Database =====
# Neon Serverless PostgreSQL (recommended)
# Get yours at: https://neon.tech
DATABASE_URL=postgresql://user:password@host.neon.tech/pricewatch?sslmode=require

# ===== Redis =====
# Upstash Redis (recommended for serverless)
# Get yours at: https://upstash.com
REDIS_URL=redis://default:password@host.upstash.io:6379

# ===== Authentication (Clerk) =====
# Get yours at: https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# Clerk URLs (Next.js)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===== API Configuration =====
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# ===== Stripe (Payments) =====
# Get yours at: https://stripe.com
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ===== External APIs (Optional) =====
# Shopify Partner App
SHOPIFY_CLIENT_ID=
SHOPIFY_CLIENT_SECRET=
SHOPIFY_SCOPES=read_products,read_orders

# Meta (Facebook) Ads
META_APP_ID=
META_APP_SECRET=

# Klaviyo
KLAVIYO_CLIENT_ID=
KLAVIYO_CLIENT_SECRET=

# Claude API (for AI features)
ANTHROPIC_API_KEY=

# ===== Monitoring (Optional) =====
# Sentry
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# LogRocket
NEXT_PUBLIC_LOGROCKET_APP_ID=

# ===== Feature Flags (Optional) =====
# Unleash or LaunchDarkly
UNLEASH_URL=
UNLEASH_API_KEY=
